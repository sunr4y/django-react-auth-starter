# Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DJANGO SETTINGS
# ===========================================
# Development: config.settings.development (uses SQLite)
# Production:  config.settings.production (uses PostgreSQL)
DJANGO_SETTINGS_MODULE=config.settings.development
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True

# ===========================================
# DATABASE
# ===========================================
# Development uses SQLite by default (configured in development.py)
# These are only used if you want to test with PostgreSQL locally
DB_NAME=authdb
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Development uses console backend (prints to terminal)
# For production, use SMTP (e.g., Resend, SendGrid, AWS SES)
EMAIL_HOST=smtp.resend.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=resend
EMAIL_HOST_PASSWORD=your-resend-api-key
DEFAULT_FROM_EMAIL=noreply@example.com

# ===========================================
# FRONTEND URL (for email links)
# ===========================================
FRONTEND_URL=http://localhost:5173
